? <-tcp::streams {
    >>- <-utf8_lossy ->utf8 ++' :Request' ->>console
    'Hello, Client' <-utf8_lossy ->>stream
}:handle_client

<|@_ {
    listen::tcp{127.0.0.1:8080} (==@fail=>{!!'failed to connect'})..
    ('Server listening on 127.0.0.1:8080'writeline console)..
    ##{
        ==@failed=>{!!'failed to connect'};
        {handle_client}*>
    }
}